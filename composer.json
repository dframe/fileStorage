{
    "name": "dframe/filestorage",
    "description": "File system storage with cache",
    "type": "library",
    "keywords": [
        "filestorage",
        "filesystem",
        "dframe",
        "stylist"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "homepage": "https://dframeframework.com",
    "license": "MIT",
    "require": {
        "league/flysystem": "^1.1.4",
        "coldume/imagecraft": "^1.0",
        "ext-fileinfo": "*",
        "league/flysystem-cached-adapter": "^1.1"
    },

    "require-dev": {
        "dframe/dframe": "*",
        "phpunit/phpunit": "^5.7.10"
    },
    "suggest": {
        "coldume/imagecraft": "^1.0"
    },
    "authors": [
        {
            "name": "SÅ‚awomir Kaleta",
            "email": "slaszka@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dframe\\FileStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dframe\\FileStorage\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "php vendor/bin/phpunit"
    }
